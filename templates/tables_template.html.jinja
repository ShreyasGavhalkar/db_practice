<html>
<head>
  <style>
    h1 {text-align:center;}
    table {
  font-family: arial, sans-serif;
  font-size: 25px;
  width: 50%;
}
  td {background-color: #dddddd;}
  .center {margin-left: auto; margin-right: auto;}
  </style>
</head>
<body>
  <h1>
  <b>The details of the columns of table "{{table}}" are:</b>
  </h1>
  <table class="center">

    <tr>
      <th>Name</th>
      <th>Data Type</th>
      <th>Nullable</th>
      <th>Auto Increment</th>
      <th>Comment</th>
    </tr>

    {%- for col in cols %}
    <tr>
      <td>{{col['name']}}</td>
      <td>{{col['type']}}</td>
      <td>{{col['nullable']}}</td>
      <td>{{col['autoincrement']}}</td>
      <td>{{col['comment']}}</td>
    </tr>
    {%- endfor %}
  </table>
</body>
</html>
